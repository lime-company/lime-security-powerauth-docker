<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- PowerAuth Server Service URL -->
    <Parameter name="powerauth.service.url" value="${PUSH_SERVER_POWERAUTH_SERVICE_URL}"/>

    <!-- PowerAuth Push Service URL -->
    <Parameter name="powerauth.push.service.url" value="${PUSH_SERVER_PUSH_SERVICE_URL}"/>

    <!-- PowerAuth Server Service Security Settings -->
    <Parameter name="powerauth.service.security.clientToken" value="${PUSH_SERVER_SECURITY_CLIENT_TOKEN}"/>
    <Parameter name="powerauth.service.security.clientSecret" value="${PUSH_SERVER_SECURITY_CLIENT_SECRET}"/>
    <Parameter name="powerauth.service.ssl.acceptInvalidSslCertificate" value="${PUSH_SERVER_ACCEPT_INVALID_SSL_CERTIFICATE}"/>

    <!-- Database Configuration - JDBC -->
    <Parameter name="spring.datasource.url" value="${PUSH_SERVER_DATASOURCE_URL}"/>
    <Parameter name="spring.datasource.username" value="${PUSH_SERVER_DATASOURCE_USERNAME}"/>
    <Parameter name="spring.datasource.password" value="${PUSH_SERVER_DATASOURCE_PASSWORD}"/>
    <Parameter name="spring.datasource.driver-class-name" value="${PUSH_SERVER_DATASOURCE_DRIVER}"/>
    <Parameter name="spring.jpa.hibernate.ddl-auto" value="${PUSH_SERVER_JPA_DDL_AUTO}"/>

    <!-- Configuration of Database Charset -->
    <Parameter name="spring.jpa.properties.hibernate.connection.CharSet" value="${PUSH_SERVER_JPA_CHARSET}"/>
    <Parameter name="spring.jpa.properties.hibernate.connection.characterEncoding" value="${PUSH_SERVER_JPA_CHARACTER_ENCODING}"/>
    <Parameter name="spring.jpa.properties.hibernate.connection.useUnicode" value="${PUSH_SERVER_JPA_USE_UNICODE}"/>

    <!-- Additional JPA Configuration -->
    <Parameter name="spring.jpa.database-platform" value="${PUSH_SERVER_JPA_DATABASE_PLATFORM}"/>

    <!-- Database Configuration - JNDI -->
    <Parameter name="spring.datasource.jndi-name" value="${PUSH_SERVER_DATASOURCE_JNDI_NAME}"/>

    <!-- APNS Configuration -->
    <Parameter name="powerauth.push.service.apns.useDevelopment" value="${PUSH_SERVER_APNS_DEVELOPMENT}"/>
    <Parameter name="powerauth.push.service.apns.proxy.enabled" value="${PUSH_SERVER_APNS_PROXY_ENABLED}"/>
    <Parameter name="powerauth.push.service.apns.proxy.host" value="${PUSH_SERVER_APNS_PROXY_HOST}"/>
    <Parameter name="powerauth.push.service.apns.proxy.port" value="${PUSH_SERVER_APNS_PROXY_PORT}"/>
    <Parameter name="powerauth.push.service.apns.proxy.username" value="${PUSH_SERVER_APNS_PROXY_USERNAME}"/>
    <Parameter name="powerauth.push.service.apns.proxy.password" value="${PUSH_SERVER_APNS_PROXY_PASSWORD}"/>

    <!-- FCM Configuration -->
    <Parameter name="powerauth.push.service.fcm.proxy.enabled" value="${PUSH_SERVER_FCM_PROXY_ENABLED}"/>
    <Parameter name="powerauth.push.service.fcm.proxy.host" value="${PUSH_SERVER_FCM_PROXY_HOST}"/>
    <Parameter name="powerauth.push.service.fcm.proxy.port" value="${PUSH_SERVER_FCM_PROXY_PORT}"/>
    <Parameter name="powerauth.push.service.fcm.proxy.username" value="${PUSH_SERVER_FCM_PROXY_USERNAME}"/>
    <Parameter name="powerauth.push.service.fcm.proxy.password" value="${PUSH_SERVER_FCM_PROXY_PASSWORD}"/>
    <Parameter name="powerauth.push.service.fcm.dataNotificationOnly" value="${PUSH_SERVER_FCM_DATA_NOTIFICATION_ONLY}"/>

    <!-- Push Campaign Batch Size -->
    <Parameter name="powerauth.push.service.campaign.batchSize" value="${PUSH_SERVER_CAMPAIGN_BATCH_SIZE}"/>

    <!-- Storage of Sent Messages Enabled -->
    <Parameter name="powerauth.push.service.message.storage.enabled" value="${PUSH_SERVER_MESSAGE_STORAGE_ENABLED}"/>

    <!-- Spring Batch Configuration -->
    <Parameter name="spring.batch.job.enabled" value="${PUSH_SERVER_SPRING_BATCH_JOB_ENABLED}"/>

    <!-- JMX Configuration -->
    <Parameter name="spring.jmx.enabled" value="${PUSH_SERVER_SPRING_JMX_ENABLED}"/>
    <Parameter name="spring.jmx.default-domain" value="${PUSH_SERVER_SPRING_JMX_DEFAULT_DOMAIN}"/>

    <!-- Push Message Gateway Connect Timeout in Milliseconds -->
    <Parameter name="powerauth.push.service.fcm.connect.timeout" value="${PUSH_SERVER_FCM_CONNECT_TIMEOUT}"/>
    <Parameter name="powerauth.push.service.apns.connect.timeout" value="${PUSH_SERVER_APNS_CONNECT_TIMEOUT}"/>

    <!-- Application Configuration -->
    <Parameter name="powerauth.push.service.applicationName" value="${PUSH_SERVER_APPLICATION_NAME}"/>
    <Parameter name="powerauth.push.service.applicationDisplayName" value="${PUSH_SERVER_APPLICATION_DISPLAY_NAME}"/>
    <Parameter name="powerauth.push.service.applicationEnvironment" value="${PUSH_SERVER_APPLICATION_ENVIRONMENT}"/>

    <!-- Custom Logging Configuration -->
    <Parameter name="logging.config" value="${PUSH_SERVER_LOGGING}"/>

</Context>
