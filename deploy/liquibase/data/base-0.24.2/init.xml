<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init-powerauth-server" author="Lukas Lukovsky" dbms="postgresql">
        <sqlFile path="powerauth-server/postgresql/create_schema.sql" relativeToChangelogFile="true" splitStatements="false"/>
        <rollback>
            <sqlFile path="powerauth-server/postgresql/delete_schema.sql" relativeToChangelogFile="true" splitStatements="false"/>
        </rollback>
    </changeSet>

    <changeSet id="init-push-server" author="Lukas Lukovsky" dbms="postgresql">
        <sqlFile path="push-server/postgresql/create_schema.sql" relativeToChangelogFile="true" splitStatements="false"/>
        <rollback>
            <sqlFile path="push-server/postgresql/delete_schema.sql" relativeToChangelogFile="true" splitStatements="false"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
